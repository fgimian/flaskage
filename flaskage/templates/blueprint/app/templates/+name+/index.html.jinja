{% extends "layout.html" %}
{% set title = "{{{ name }}}" %}

{% block js %}
  {% assets filters="coffeescript,uglifyjs", output="assets/{{{ name }}}.js",
            "javascripts/{{{ name }}}.coffee" %}
    <script src="{{ ASSET_URL }}"></script>
  {% endassets %}
{% endblock %}

{% block css %}
  {% assets filters="less,cleancss", output="assets/{{{ name }}}.css",
            "stylesheets/{{{ name }}}.less" %}
    <link rel="stylesheet" type="text/css" href="{{ ASSET_URL }}" />
  {% endassets %}
{% endblock %}

{% block body %}
  Welcome to your new blueprint! :)
{% endblock %}
