{% extends "layout.html" %}
{% set title = "Blueprint" %}

{% block js %}
  {% assets filters="coffeescript,uglifyjs", output="{{{ name }}}.js",
            "javascripts/{{{ name }}}.js.coffee" %}
    <script src="{{ ASSET_URL }}"></script>
  {% endassets %}
{% endblock %}

{% block css %}
  {% assets filters="less,cleancss", output="{{{ name }}}.css",
            "stylesheets/{{{ name }}}.css.less" %}
    <link rel="stylesheet" type="text/css" href="{{ ASSET_URL }}" />
  {% endassets %}
{% endblock %}

{% block body %}
  <h1>Welcome to your new blueprint!</h1>
  <p>
    You may now begin developing your blueprint by writing any related models,
    views, templates and helper functions.
  </p>
{% endblock %}
