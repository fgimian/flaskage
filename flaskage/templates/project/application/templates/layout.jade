doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title

    // Bootstrap
    - assets filters="less,cleancss", output="css/{{{ name }}}.css", depends="less/bootstrap/*.less", "less/{{{ name }}}.less"
        link(rel="stylesheet", type="text/css", href=ASSET_URL)

    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    // if IE lt 9
      script(src=url_for('static', filename='js/html5shiv.js'))
      script(src=url_for('static', filename='js/respond.min.js'))
  body
    block body

    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src=url_for('static', filename='js/jquery.min.js'))
    // Include all compiled plugins (below), or include individual files as needed
    script(src=url_for('static', filename='js/bootstrap.min.js'))

    // Coffeescript
    - assets filters="coffeescript,uglifyjs", output="js/{{{ name }}}.js", "coffee/{{{ name }}}.coffee"
        script(src=ASSET_URL)
