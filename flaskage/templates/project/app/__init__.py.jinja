    pass


def configure_blueprints(app):
    from .views import welcome_view
    app.register_blueprint(welcome_view.mod)


def configure_extensions(app, db):
    db.init_app(app)
    migrate.init_app(app, db, directory=os.path.join('db', 'migrations'))
    assets.init_app(app)

